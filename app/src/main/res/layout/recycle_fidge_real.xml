<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">


    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/iv"
        android:background="@drawable/car1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名字 ：" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备状态 ：" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备手机 ：" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随车司机 ：" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随车手机 ：" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随车车牌 ：" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/tv_deviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />


            <TextView
                android:id="@+id/tv_decicePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/tv_carDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />


            <TextView
                android:id="@+id/tv_carPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/tv_carNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/ll1"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#f29254"
                android:orientation="vertical">
                <!-- // android:background="@drawable/fill_border"-->
                <TextView
                    android:id="@+id/tv_devName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="探头"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="温度:"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/DevValue"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="湿度:"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView

                        android:id="@+id/DevHumiValue"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ll1"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/ll2"
                android:layout_weight="1"
                android:background="#0dc9c7"
                android:orientation="vertical">
                <!--android:background="@drawable/fill_border"-->
                <TextView
                    android:id="@+id/tv_devNametwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="探头2"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="温度:"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/DevValueTwo"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="湿度:"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/DevHumiValueTwo"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>